<%request scope="global">
std::string message;
</%request>
<html>
 <head>
  <link rel="stylesheet" type="text/css" href="styles.css">
 </head>
 <body>

  <form method="post">
   <table style="width:100%; height:100%;">
    <tr style="height:100%">
     <td class="treemenu">
       <&treemenu qparam>
     </td>
     <td class="mainarea">
       <& (request.getPathInfo()) qparam >
% if (!message.empty()) {
       <hr>
       <$ message $>
% }
     </td>
   </tr>
  </table>

 </form>
 </body>
</html>
