<%cpp>

std::string id = request.getArg("id");

tntdb::Statement stmt = conn.prepare(
    "delete"
    " from friend"
    " where id = :id");

unsigned n = stmt.set("id", id).execute();

log_debug("delete friend id " << id << "; returns " << n);

reply.setContentType("text/plain");
reply.out() << n;

